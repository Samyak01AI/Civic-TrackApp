<!-- Filename: dialog_confirm_changes.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Image at top -->
    <ImageView
        android:id="@+id/imgConfirmDialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_sure"
    android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Changes?"
        android:textSize="20sp"
        android:textColor="#5D5FEF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnYes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:backgroundTint="#5D5FEF"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9A9A9A"
        android:textColor="@android:color/white" />
</LinearLayout>
