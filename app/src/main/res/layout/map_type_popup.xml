<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_layout"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iconNormal"
        android:src="@drawable/default1"
        android:contentDescription="Normal Map"
        android:layout_margin="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tooltipText="Default Map"/>

    <ImageView
        android:id="@+id/iconSatellite"
        android:src="@drawable/satellite"
        android:contentDescription="Satellite Map"
        android:layout_margin="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tooltipText="Satellite Map"/>

    <ImageView
        android:id="@+id/iconTerrain"
        android:src="@drawable/terrain"
        android:contentDescription="Terrain Map"
        android:layout_margin="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tooltipText="Terrain Map"/>

    <ImageView
        android:id="@+id/iconHybrid"
        android:src="@drawable/hybrid"
        android:contentDescription="Hybrid Map"
        android:layout_margin="8dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:tooltipText="Hybrid Map"/>
</LinearLayout>