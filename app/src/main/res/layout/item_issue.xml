<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/grey_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Issue Icon (Customize per issue type) -->
        <ImageView
            android:id="@+id/ivIssueIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/img_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Issue Title -->
            <TextView
                android:id="@+id/tvIssueName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pothole"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Issue Location/Status (Like Swachh Bharat App) -->
            <TextView
                android:id="@+id/tvIssueLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Near Central Park, Sector 15"
                android:textColor="@color/grey_dark"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status_pending"
            android:padding="8dp"
            android:text="Pending"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>