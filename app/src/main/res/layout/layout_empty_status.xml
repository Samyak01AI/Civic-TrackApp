<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Government-themed illustration -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerInside"
        android:src="@drawable/placeholder" />

    <!-- Title with government typography -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_issues_are_added"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/TextAppearance.CivicTrack.Headline"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/no_status"
        android:textColor="@color/government_gray"
        android:textSize="16sp"/>

    <!-- Primary CTA (Government-styled button) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReportNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/report_an_issue"
        android:textColor="@android:color/white"
        app:icon="@drawable/report"
        app:iconTint="@android:color/white"
        app:backgroundTint="@color/government_secondary"
        app:cornerRadius="8dp"
        style="@style/Widget.CivicTrack.Button"/>

    <!-- Optional: Secondary action -->
    <TextView
        android:id="@+id/tvRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/try_again"
        android:textColor="@color/government_primary"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/refresh"
        app:drawableTint="@color/government_primary" />
</LinearLayout>