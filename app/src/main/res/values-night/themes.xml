<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark UnifiedHR Theme -->
    <style name="Theme.CivicTrack" parent="Theme.Material3.DayNight">
        <!-- Primary brand color (same in dark) -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_light</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_purple_light</item>
        <item name="colorSecondaryVariant">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <!-- Background colors (dark theme specific) -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_light_gray</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Status bar (dark theme) -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar (dark theme) -->
        <item name="android:navigationBarColor">@color/background_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red_light</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <!-- Text colors (dark theme) -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>

        <!-- Action bar (dark theme) -->
        <item name="actionBarStyle">@style/CivicTrack.ActionBar.Dark</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_primary</item>

        <!-- Outline colors for dark theme -->
        <item name="colorOutline">@color/border_light</item>
        <item name="colorOutlineVariant">@color/border_medium</item>
    </style>

    <!-- Dark Action Bar Style -->
    <style name="CivicTrack.ActionBar.Dark" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/surface_white</item>
        <item name="titleTextStyle">@style/CivicTrack.ActionBar.Title.Dark</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="CivicTrack.ActionBar.Title.Dark" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Dark No Action Bar Theme -->
    <style name="Theme.CivicTrack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_primary</item>
    </style>



    <!-- Dark Dialog Theme -->
    <style name="CivicTrack.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/surface_white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Dark Bottom Sheet Theme -->
    <style name="CivicTrack.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:backgroundTint">@color/surface_white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

</resources>