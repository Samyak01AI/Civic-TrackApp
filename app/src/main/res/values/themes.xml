<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main app theme -->
    <style name="Theme.CivicTrack" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/secondary_purple_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="actionBarStyle">@style/Theme.CivicTrack.ActionBar</item>
    </style>

    <!-- No Action Bar variant -->
    <style name="Theme.CivicTrack.NoActionBar" parent="Theme.CivicTrack">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
