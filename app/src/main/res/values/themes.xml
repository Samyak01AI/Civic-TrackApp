<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CivicTrackApplication" parent="Theme.Material3.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/government_primary</item>
        <item name="colorPrimaryVariant">@color/government_primary_dark</item>
        <item name="colorOnPrimary">@color/government_white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/government_secondary</item>
        <item name="colorOnSecondary">@color/government_white</item>

        <!-- Component styles -->
        <item name="bottomNavigationStyle">@style/Widget.CivicTrack.BottomNavigation</item>
        <item name="buttonStyle">@style/Widget.CivicTrack.Button</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.CivicTrack.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="android:height">72dp</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.CivicTrack.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/government_white</item>
        <item name="backgroundTint">@color/government_secondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CivicTrack.MediumComponent</item>
    </style>

    <!-- Rounded corners -->
    <style name="ShapeAppearance.CivicTrack.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="TextAppearance.CivicTrack.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/government_blue</item>
    </style>
    <!-- res/values/themes.xml -->
    <style name="Theme.CivicTrackApplication.NoActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    </style>
</resources>